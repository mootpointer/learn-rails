#!/bin/bash

KEYS=$(az keyvault secret list --vault-name anharvey-docker-keyvault --query [].id -o tsv)

for key in $KEYS;
do
    short_key=$(echo "$key" | cut -d / -f 5 | sed "s/-/_/g")
    value=$(az keyvault secret show --id "$key" --query value -o tsv)
    declare -x $"${short_key^^}"="$value"
done

rails s -p $PORT

